<!DOCTYPE html>
<html>
<head>
  <title>Monthly</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
</head>
<body>

<%#= yield :sidebar %>
<div class="sidebar">
  <div class="sidebar-header dropdown">
    <div id="dLabel" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <i class="dropdown-arrow pull-right fa fa-angle-down"></i>
      <h3>Monthlee</h3>
      <h6>Bart Simpson </h6>
      <div class="dropdown-menu" aria-labelledby="dLabel">
        <h6 class="dropdown-header">Dropdown header</h6>
        <a class="dropdown-item" href="#">Action</a>
        <a class="dropdown-item" href="#">Another action</a>
      </div>
    </div>
  </div>
  <div class="section">
    <div class="section-header"><a href="" data-toggle="tooltip" data-placement="top" title="Browse properties">Properties</a>
      <div data-toggle="tooltip" class="pull-right" data-placement="top" title="Add property">
        <a href="#" data-toggle="modal" data-target="#myModal"><i class="fa fa-plus-circle"></i><a>
      </div>
    </div>
    <div class="list-group">
      <a href="#" class="list-group-item">
        Runaway Bay
        <span class="label label-default label pull-right">14</span>
      </a>
      <a href="#" class="list-group-item active">
        The Vinings
        <span class="label label-default label pull-right">2</span>
      </a>
    </div>
  </div>
  <div class="section">
    <div class="section-header"><a href="" data-toggle="tooltip" data-placement="top" title="View summary">Account</a>
      <div data-toggle="tooltip" class="pull-right" data-placement="top" title="Edit account">
        <a href="#"><i class="fa fa-cog"></i><a>
      </div>
    </div>
    <div class="list-group">
      <a href="#" class="list-group-item">
        Status
        <span class="pull-right">Active</span>
      </a>
      <a href="#" class="list-group-item">
        Balance
        <span class="pull-right">$5,325.07</span>
      </a>
    </div>
  </div>
</div>

<div class="primary">
  <%= yield %>
</div>

</body>
</html>
